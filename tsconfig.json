{
  "compilerOptions": {
    "target": "ES2020",
    "module": "none",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "."
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
